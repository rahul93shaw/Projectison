<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEFA" >
    
    <ScrollView
        android:id="@+id/scrollViewcart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top" >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView 
        android:id="@+id/imageViewcart"
        android:layout_marginLeft="05dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/cart">
     
    	</ImageView>
        
        
    	<TextView
        android:id="@+id/textViewshopcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#6600FF"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="Shopping Cart"
        android:textSize="22dip"
        android:textStyle="normal|bold|italic" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/textViewcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#990099"
         android:textSize="15dip"
        android:textStyle="normal|bold|italic" />

     
     <View
             android:layout_width="fill_parent"
             android:layout_height="2dp"
             android:layout_marginTop="05dp"
             android:background="#000099"/>
     
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    	
        <TextView
        android:id="@+id/textsumtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Sum Total :"
        android:textColor="#990000"
        android:textSize="15dip"
        android:textStyle="normal|bold|italic" />
        
        <TextView
        android:id="@+id/textsumtotal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#990000"
        android:textSize="15dip"
        android:textStyle="normal|bold|italic" />
        
        
        
        
    </LinearLayout>
     
    
     <View
             android:layout_width="fill_parent"
             android:layout_height="2dp"
             android:layout_marginTop="05dp"
             android:background="#000099"/>
    
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
        <TextView
        android:id="@+id/textViewitemremove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="Item to remove :"
        android:textSize="15dip"
        android:textStyle="normal|bold|italic" />

        <EditText
            android:id="@+id/editTextremove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:inputType="textCapCharacters"
            android:ems="10" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>


    <Button
        android:id="@+id/buttonremove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Remove Item"
        android:textColor="#008000" 
         android:background="#ADD8E6"/>
    <Button
        android:id="@+id/buttonconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Confirm"
        android:textColor="#008000"
         android:background="#ADD8E6" />
    
</LinearLayout>

</ScrollView>
</LinearLayout>
