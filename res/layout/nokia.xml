<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C8FE2E" >
    
    <TextView 
   android:layout_width="wrap_content"
   android:layout_height="wrap_content" 
   android:id="@+id/TextViewProductTitle5"
   android:layout_gravity="center" 
   android:layout_margin="5dip"
   android:textSize="12dip" 
   android:textStyle="normal|bold|italic"
   android:text="NOKIA LUMIA X98"
   android:textColor="#0404B4">
   </TextView>
   
     <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="05dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top" >
   <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    
    <ImageView 
        android:id="@+id/imagesale4"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/sale4">
     
    </ImageView>
    
    
    <ImageView 
        android:id="@+id/imageView6"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/phone1">
     
    </ImageView>
    <ImageView 
        android:id="@+id/imageView06"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/nokia">
     
    </ImageView>
    
     </LinearLayout>
     </HorizontalScrollView>
     
    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="80dp"
        android:layout_gravity="top" >
    

    <TextView
        android:id="@+id/textview16"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Name : NOKIA LUMIA X98\n
Chipset: Qualcomm Snapdragon\n
CPU: 2.5 GHz Cortex-A5\n
Operating System: Android 4.2.2\n
RAM: 512 MB\n
Dimensions:	130.5 x 72.3 x 10.5 mm\n
Weight:	250 g\n
Capacity: 8 GB(Expandable Storage : 32 GB)\n
Screen: 6-inch Capacitive Touchscreen\n
Warranty: 1 year Manufacturer Warranty\n
Camera: 8.0 MP"
 />
    </ScrollView>
    
    <TextView
        android:id="@+id/textview17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:textSize="15dip"
        android:textColor="#FE2E64"
        android:textStyle="normal|bold|italic"
        android:text="Price : Rs. 16,499" />
    
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    
    <TextView
        android:id="@+id/textview18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Quantity(max 3 per order):" />
    <EditText
            android:id="@+id/text6"
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
    		android:layout_height="wrap_content"
    		android:ems="10"
    		android:inputType="number" />
    
 	</LinearLayout>
 	<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

     <Button
         android:id="@+id/button11"
         style="?android:attr/buttonStyleSmall"
         android:layout_marginLeft="40dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="left"
         android:text="Back"
         android:textColor="#008000" 
         android:background="#ADD8E6"/>
     <Button
 	    android:id="@+id/button12"
 	    style="?android:attr/buttonStyleSmall"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_marginLeft="120dp"
 	    android:layout_gravity="center"
 	    android:text="Add To Cart"
 	    android:textColor="#008000" 
 	    android:background="#ADD8E6"/>
     
 	</LinearLayout>

</LinearLayout>
